<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <targets>
    <target name="FullCSVFile" xsi:type="File"  fileName="${basedir}/Logging/ScheduledWorker-${date:format=yyyy-MM-dd}.csv">
      <layout xsi:type="CSVLayout">
        <column name="Index" layout="${counter}" />
        <column name="ThreadID" layout="${threadid}" />
        <column name="Time" layout="${longdate}" />
        <column name="Severity" layout="${level:uppercase=true}" />
        <column name="Location" layout="${callsite:className=False:fileName=True:includeSourcePath=False:methodName=False}" />
        <column name="Detail" layout="${message}" />
        <column name="Exception" layout="${exception:format=ToString}" />
      </layout>
    </target>
    <target name="debugger" xsi:type="Debugger" layout="${level}>${message} (${exception:format=ToString})"/>
    <target name="console" xsi:type="ColoredConsole" layout="${date:format=dd-MM-yyyy HH\:mm\:ss} - ${message}"
        header="-------------------------------------------------------------------------------${newline}Start:${longdate} Machine:${machinename} User:${windows-identity}${newline}-------------------------------------------------------------------------------"
        footer="-------------------------------------------------------------------------------${newline}End:${longdate} ProcID:${processinfo:property=Id} PeakPagedMemory:${processinfo:property=PeakPagedMemorySize}${newline}    PeakVirtualMemory:${processinfo:property=PeakVirtualMemorySize} PeakWorkingSet:${processinfo:property=PeakWorkingSet} ${newline}-------------------------------------------------------------------------------"/>
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="console" />
    <logger name="*" minlevel="Trace" writeTo="FullCSVFile" />
    <logger name="*" minlevel="Debug" writeTo="debugger" />
  </rules>
</nlog>